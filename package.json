{
  "name": "mediacloud_node",
  "description": "NodeJS Backend for mediacloud.com",
  "author": "David T. Pizarro Frick <davidpizarrofrick@gmail.com>",
  "repository": "git@github.com:DTPF/easymediacloud-backend-node.git",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "export NODE_ENV=development && concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,scss,json,md}\""
  },
  "dependencies": {
    "body-parser": "~1.20.3",
    "connect-multiparty": "~2.2.0",
    "cors": "~2.8.5",
    "dauth-md-node": "^0.2.15",
    "dotenv": "~16.4.5",
    "express": "~4.21.1",
    "fs-extra": "~11.2.0",
    "get-folder-size": "^5.0.0",
    "helmet": "~8.0.0",
    "i18next": "~23.16.5",
    "ipware": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "~2.30.1",
    "mongoose": "~8.8.1"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/bcrypt-nodejs": "~0.0.31",
    "@types/cors": "~2.8.17",
    "@types/express": "~5.0.0",
    "@types/fs-extra": "~11.0.4",
    "@types/get-folder-size": "^3.0.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "~22.9.0",
    "concurrently": "~9.1.0",
    "nodemon": "~3.1.7",
    "prettier": "^3.3.3",
    "typescript": "~5.6.3"
  },
  "prettier": {
    "printWidth": 110,
    "semi": true,
    "singleQuote": true,
